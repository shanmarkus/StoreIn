<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/loginLogoImageView"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_description_testing"
        android:src="@drawable/logo_storein" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loginLogoImageView"
        android:layout_alignRight="@+id/loginLogoImageView"
        android:layout_below="@+id/loginLogoImageView"
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/loginImageUserNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_description_testing"
            android:src="@drawable/login_username" />

        <EditText
            android:id="@+id/usernameField"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/loginImageUserNameView"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="@string/username_hint"
            android:singleLine="true" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/loginImagePasswordView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_description_testing"
            android:src="@drawable/login_password" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/loginImagePasswordView"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:singleLine="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" >

        <ImageButton
            android:id="@+id/imageButtonLoginFacebook"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/login_facebook"
            android:contentDescription="@string/image_description_testing" />

        <ImageButton
            android:id="@+id/imageButtonSignUp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@+id/imageButtonLoginFacebook"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_signup_storein"
            android:contentDescription="@string/image_description_testing"
            android:scaleType="fitCenter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" >

        <ImageButton
            android:id="@+id/loginImageLoginButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:adjustViewBounds="true"
            android:background="@drawable/login_button_login"
            android:contentDescription="@string/image_description_testing"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/loginOrImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/loginImageLoginButton"
            android:layout_marginTop="3dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_description_testing"
            android:src="@drawable/login_or_text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/loginTextForgetPassword"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:text="@string/action_forgot_password"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white" />

</RelativeLayout>